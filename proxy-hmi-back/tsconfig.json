{
    "compilerOptions": {
      "preserveConstEnums": true,
      "module": "commonjs",
      "target": "es6",
      "moduleResolution":"node",
      "esModuleInterop": true,
      "jsx": "preserve",
      "strictFunctionTypes": true,
      "sourceMap": false,
      "outDir": "bin",
      "resolveJsonModule": true,
      "noStrictGenericChecks" : true,
      "baseUrl": ".",
      "paths": {
        "@common/*": ["./common/*"],
        "@server/*": ["./server/*"]
        }
    },
    "include": ["*"],
    "exclude": ["node_modules"],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
}